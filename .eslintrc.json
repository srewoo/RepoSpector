{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "chrome": "readonly",
    "module": "readonly",
    "require": "readonly",
    "global": "readonly",
    "exports": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": ["warn", { "allow": ["error", "log", "warn"] }]
  }
} 